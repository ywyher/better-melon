{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "lib": ["ES2022"]
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
  }